/************************************/
/********** GENEL KULLANIM **********/
/************************************/
border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n
box-shadow(){
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	box-shadow arguments
}
font_standart 	=  Lato, Arial, sans-serif
nopls			= none !important
/************************************/
/********** GENEL KULLANIM **********/
/************************************/
body {
	font-family font_standart
	padding-top 90px
	a:hover {
		cursor pointer
		text-decoration none
	}
	.navbar-hrt {
		background fuiamethyst
		text-shadow rgba(0, 0, 0, 0.15) 0px -1px 0px
		border-color fuiwisteria
		
		.navbar-brand {
			line-height 30px
			color white
			font-size 24px
			margin-right 40px
			font-weight 600
			&:hover {
				color white
			}	
		}
		
		.nav {  
			li {
				font-weight 600
				font-size 15px

				a {
					color rgba(255,255,255,0.7)
					padding 15px 15px
					line-height 30px
					&:hover {
						color white
						img {
							opacity 1
						}
					}
					i {
						margin-left 8px
						font-size 24px
						float right
						line-height 30px
					}
					img {
						width 25px
						height 25px
						opacity:0.7;
					}
				}
				&.active {
					a, a:hover {
						background rgba(0,0,0,0.3)
						color white
						img {
							opacity 1
						}
					}
				}
			}

		}

		.navbar-toggle {
			border-color rgba(255,255,255,0.1)
			margin-top 13px
			&:hover, &:focus {
				background rgba(0,0,0,0.3)
				border-color rgba(0,0,0,0.05)
			}
			.icon-bar {
				background white
			}
			&.active {
				background fuisunflower
			}

		}

		.navbar-collapse {
			border-color fuiwisteria
		}
	}
	.decks {
		.toplatest {
			.btn {
				border none
				background fuipreclouds
				color fuiwetasphalt
				text-shadow none
				line-height 25px
				// height 56px


				&:active, &.active, &:hover {
					border none
					background fuiamethyst
					color white
					text-shadow none
					box-shadow none
				}
				&:hover {
					background fuiorange
				}
				&.active:hover {
					background fuiamethyst
				}
			}
		}
		.decks-top {
			margin-bottom 20px
			.selectclass {
				.btn-group {
					width 100%
					.btn {
						width 100%
						border none !important
						background fuiamethyst
						color white
						box-shadow none !important
						line-height 25px
					}
					span.caret {
						margin-top 12px
						border-top-color white !important
					}
					ul {
						width 100%
						border none !important
						background fuiwisteria
						padding 4px
						li a {
							color white
							padding 5px 12px
							font-size 16px
							border-radius(4px)
							&:hover {
								background fuiorange
								cursor pointer
							}
						}
					}
					&:hover {
						.btn {
							background fuiorange !important
						}
					}
					&.open {
						.btn {
							background fuicarrot !important
						}
					}
				}

				.btn-group .btn span span {
					height 25px
					width 25px
					background-size 100%
					vertical-align top
					&.all {
						background-position 0 0
					}
					&.druid {
						background-position 0 -25px
					}
					&.hunter {
						background-position 0 -50px
					}
					&.mage {
						background-position 0 -75px
					}
					&.paladin {
						background-position 0 -100px
					}
					&.priest {
						background-position 0 -125px
					}
					&.rogue {
						background-position 0 -150px
					}
					&.shaman {
						background-position 0 -175px
					}
					&.warlock {
						background-position 0 -200px
					}
					&.warrior {
						background-position 0 -225px
					}	
				}		
			}
			.btn-build {
					background fuiemerald
					color white
					border none
					line-height 25px
				&:hover {
					background fuinephritis
					color white
					border none
				}
			}
		}
		.decklist {
			&.head .unit {
				line-height 30px
				font-size 17px
				text-transform uppercase
				&.comments {
					i {
						height: 30px;
						display: block;
						font-size: 30px;
					}
				}				
			}
			margin 0
			.unit {
				border-bottom 1px solid fuisilver
				padding 10px 15px
				line-height 62px
				font-size 21px
				color fuiwetasphalt

				&.order {
					font-weight 300
					span {
						color fuiasbestos
						font-size 30px
						vertical-align middle
						display inline
						line-height 30px
					}
				}
				&.upvote {

					i {
						padding 7px 8px
						background fuisilver
						color white
						font-size 30px
						border-radius(100%)
						vertical-align middle
						display inline
						&:hover {
							background fuiemerald
							cursor pointer
						}
					}
				}
				&.name {

					h2 {
						font-weight 600
						font-size 28px
						margin 0 0 4px
						padding 0
						line-height 34px
						font-family font_standart !important
						display block
						width 100%
						a {
							color fuimidnightblue
							&:hover {
								color fuipeterriver
							}
						}
					}
					.uname {
						line-height 24px
						display block
						font-size 14px
						span {
							color fuiasbestos
							font-weight 300
						}
						a {
							margin 0 10px 0 0
							line-height 24px
							float left
							color fuiwetasphalt
							font-size 14px
							img {
								width 24px
								height 24px
								float left
								margin-right 6px
								border-radius(100%)
							}
							&:hover {
								color fuipeterriver
							}
						}
					}
				}
			}
			&:nth-child(2n+1) {
				background fuipreclouds
			}
		}
		.hsclass span, .selectclass ul li a span, .selectclass .btn-group .btn span span{
			width 36px
			height 36px
			background white
			display inline-block
			margin-right 6px
			vertical-align middle
			background black url(/img/classes.png) no-repeat
			background-position 0 0
			border 0px solid white
			border-radius(3px)
			&.all {
				background-position 0 0
			}
			&.druid {
				background-position 0 -36px
			}
			&.hunter {
				background-position 0 -72px
			}
			&.mage {
				background-position 0 -108px
			}
			&.paladin {
				background-position 0 -144px
			}
			&.priest {
				background-position 0 -180px
			}
			&.rogue {
				background-position 0 -216px
			}
			&.shaman {
				background-position 0 -252px
			}
			&.warlock {
				background-position 0 -288px
			}
			&.warrior {
				background-position 0 -324px
			}							
		}		
	}
	.singledeck {
		font-family font_standart !important
		h1 {
			font-family font_standart !important
			font-weight: 300;
			margin-top 0
			color fuimidnightblue
		}
		.info1 {
			font-size 17px
			a {
				color fuiconcrete
				&:hover {
					color fuipeterriver
				}
				img {
					width: 24px;
					height: 24px;
					float: left;
					margin-right: 6px;
					border-radius(100%)
				}
			}
			span {
				font-weight 300
				color fuiconcrete
				margin 0 4px 0 2px
			}
		}
		.info2 {
			text-align center
			background fuiwetasphalt
			border-radius(4px)
			padding 10px
			ul {

				list-style-type none
				padding 10px
			}
			.mana {
				background url(/img/classes.png) no-repeat
				background-position -36px 0
				border 0px solid white
				width 36px
				height 36px
				display inline-block
				margin auto
			}
		}
	}
}